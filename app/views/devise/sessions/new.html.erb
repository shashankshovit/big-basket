<section class="container">
<h3>Log in to BigBasket!</h3>
</section>

<section class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="input-group input-group-lg">
      <span class="input-group-addon">Email</span>
      <%= f.email_field :email, class: 'form-control', placeholder: "Your email please!", autofocus: true %>
  </div>

  <div class="input-group input-group-lg">
      <span class="input-group-addon">Password</span>
      <%= f.password_field :password, class: 'form-control', placeholder: "Your password please!", autocomplete: "off" %>
  </div>
  
  <% if devise_mapping.rememberable? -%>
  <div class="input-group input-group-lg add-button">
    <span class="input-group-addon"><%= f.check_box :remember_me %></span>
    <%= f.label :remember_me, class: 'form-control' %>
  </div>
  <% end %>

  <div class="input-group input-group-lg add-button">
    <input class="btn btn-primary" type="submit" value="Log in!" />
  </div>


<% end %>
</section>